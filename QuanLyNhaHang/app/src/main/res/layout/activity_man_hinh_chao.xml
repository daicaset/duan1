<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinhChaoActivity">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:src="@drawable/bg"
        app:layout_constraintVertical_bias="0"
        android:scaleType="centerCrop"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/appname"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:elevation="2dp"
        android:src="@drawable/ft_logo"
        app:layout_constraintBottom_toTopOf="@+id/lottie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/splash"
        app:layout_constraintTop_toTopOf="@+id/splash" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/splash"
        app:layout_constraintEnd_toEndOf="@+id/splash"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="@+id/splash"
        app:layout_constraintTop_toTopOf="@+id/splash"

        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/coke_animation" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/splash"
        app:layout_constraintEnd_toEndOf="@+id/splash"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="@+id/splash"
        app:layout_constraintTop_toTopOf="@+id/splash"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/hamburger" />

</androidx.constraintlayout.widget.ConstraintLayout>