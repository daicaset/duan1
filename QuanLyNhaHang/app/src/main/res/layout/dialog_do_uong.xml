<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFDE8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/teal_700"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn đồ uống"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edTenDU"
            android:hint="Nhập tên đồ uống"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edGiaDU"
            android:hint="Nhập giá đồ uống"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edSoLuongDU"
            android:hint="Nhập số lượng"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:id="@+id/rdg_size_du"
        android:layout_width="380dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:checked="true"
            android:id="@+id/rdb_nho"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Nhỏ"/>

        <RadioButton
            android:id="@+id/rdb_vua"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Vừa"/>

        <RadioButton
            android:id="@+id/rdb_lon"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Lớn"/>
    </RadioGroup>

    <Spinner

        android:id="@+id/spinnerLoaiDU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <Button
            android:textSize="20dp"
            android:backgroundTint="@color/purple_700"
            android:id="@+id/btnSaveDU"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Lưu"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            />

        <Button
            android:textSize="20dp"
            android:backgroundTint="@color/purple_700"
            android:id="@+id/btnCancelDU"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Hủy"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            />
    </LinearLayout>



</LinearLayout>